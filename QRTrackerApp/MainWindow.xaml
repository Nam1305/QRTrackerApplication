<Window x:Class="QRTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRTrackerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="HỆ THỐNG QR TRACKER" FontSize="40" Style="{StaticResource TitleTextStyle}"/>
            <Button  Content="QUÉT QR" Width="300" Height="100" Style="{StaticResource MainButtonStyle}"/>
            <Button x:Name="btn_ViewHistory"  Content="LỊCH SỬ" Width="300" Height="100" Style="{StaticResource MainButtonStyle}" Click="btn_ViewHistory_Click"/>
            <Button x:Name="btn_ListProduct"  Content="DANH SÁCH MÃ SẢN PHẨM" Width="300" Height="100" Style="{StaticResource MainButtonStyle}" Click="btn_ListProduct_Click" />
        </StackPanel>

    </Grid>
</Window>
